journal = {Technology, Knowledge and Learning},
keywords = {Computational thinking,Educational games,Mobile technology-supported learning},
number = {4},
pages = {1815--1824},
title = {{The WearableLearning Platform: A Computational Thinking Tool Supporting Game Design and Active Play}},
url = {https://doi.org/10.1007/s10758-022-09601-1},
